generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String        @id @default(uuid())
  email                String        @unique
  password             String
  name                 String
  role                 Role          @default(INCHARGE)
  createdAt            DateTime      @default(now())
  updatedAt            DateTime      @updatedAt
  associations         Association[]
  categoriesAsIncharge Category[]    @relation("CategoryIncharge")
  eventsAsAdmin        Event[]       @relation("EventAdmin")
}

model Association {
  id          String   @id @default(uuid())
  name        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdById String
  createdBy   User     @relation(fields: [createdById], references: [id])
  events      Event[]
}

model Event {
  id            String      @id @default(uuid())
  name          String
  startDate     DateTime
  endDate       DateTime
  venue         String
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  associationId String
  adminId       String
  admin         User        @relation("EventAdmin", fields: [adminId], references: [id])
  association   Association @relation(fields: [associationId], references: [id])
  games         Game[]
}

model Game {
  id         String     @id @default(uuid())
  name       String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  eventId    String
  categories Category[]
  event      Event      @relation(fields: [eventId], references: [id])
}

model Category {
  id         String   @id @default(uuid())
  name       String
  entryFee   Float    @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  gameId     String
  inchargeId String
  game       Game     @relation(fields: [gameId], references: [id])
  incharge   User     @relation("CategoryIncharge", fields: [inchargeId], references: [id])
  matches    Match[]
  teams      Team[]
}

model Team {
  id             String       @id @default(uuid())
  name           String
  captainName    String?
  branch         String
  year           String
  status         TeamStatus   @default(PENDING)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  categoryId     String
  matchesAsTeam1 Match[]      @relation("MatchTeam1")
  matchesAsTeam2 Match[]      @relation("MatchTeam2")
  category       Category     @relation(fields: [categoryId], references: [id])
  members        TeamMember[]
}

model TeamMember {
  id        String   @id @default(uuid())
  name      String
  branch    String?
  year      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  teamId    String
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
}

model Match {
  id            String    @id @default(uuid())
  scheduledTime DateTime?
  result        String?
  scoreData     Json?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  categoryId    String
  team1Id       String?
  team2Id       String?
  category      Category  @relation(fields: [categoryId], references: [id])
  team1         Team?     @relation("MatchTeam1", fields: [team1Id], references: [id])
  team2         Team?     @relation("MatchTeam2", fields: [team2Id], references: [id])
}

enum Role {
  DEVELOPER
  ADMIN
  INCHARGE
}

enum TeamStatus {
  PENDING
  APPROVED
  REJECTED
}
